# ------------------------------
# Functions

function x {
    sh -c "python $p/bin/x.py $*"
}

function d {
    d=$1
    [ "$1" == "html" ]  && d="$p/Documents/guide/HtmlApps"
    [ "$1" == "ihtml" ] && d="$p/static/images/guide/HtmlApps"
    [ "$1" == "chtml" ] && d="$p/Documents/guide/HtmlApps/web-root"
    [ "$1" == "lhtml" ] && d="$p/Documents/guide/HtmlApps/lesson"
    [ "$1" == "php" ]   && d="$p/Documents/guide/PhpApps"
    [ "$1" == "cphp" ]  && d="$p/Documents/guide/PhpApps/web-root"
    [ "$1" == "lphp" ]  && d="$p/Documents/guide/PhpApps/lesson"
    [ "$1" == "iphp" ]  && d="$p/static/images/guide/PhpApps"
    [ "$1" == "teach" ] && d="$p/Documents/guide/Teaching"
    [ "$1" == "books" ] && d="$p/Documents/booknotes"
    [ "$1" == "htdocs" ] && d="/Applications/XAMPP/xamppfiles/htdocs"
    echo $d; pushd $d; ls -al
}

function bup {
    echo 'Commit and push code to Bluehost'
    co "$*" && bluepull
}

function teach {
    x guide lesson Teaching/$1.md
}

function show {
    e `which $1`
}

