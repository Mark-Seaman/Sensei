# ------------------------------
# Functions

function bup {
    echo 'Commit and push code to Bluehost'
    co "$*" && bluepull
}

function ce {
    cd $p && e */$1.py
}

function commit {
    git status &&
    git add . &&
    git commit -m "$*" &&
    git push
}

function d {
    d=$1
    [ "$1" == "books" ] && d="$p/Documents/booknotes"
    [ "$1" == "htdocs" ] && d="/Applications/XAMPP/xamppfiles/htdocs"
    echo $d && cd $d && ls -al
}

function show {
    e `which $1`
}

function teach {
    x guide lesson Teaching/$1.md
}

function x {
    sh -c "python $p/bin/x.py $*"
}

