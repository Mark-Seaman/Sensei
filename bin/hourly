#!/bin/bash
# Run the hourly task as seaman

if [ `hostname` == 'MyBook' ]
then
    export p=$HOME/MyBook
else
    export p=$HOME/Projects/MyBook
fi

# export p=$HOME/Projects/MyBook
# export DJANGO_SETTINGS_MODULE=hammer.settings
# export PROJECT_BASE="$HOME/Projects/Hammer"
# export DROPLET_IP='45.55.50.13'
# export SERVER_DIR=/home/django/MyBook
# export imac='seaman@172.16.0.6'
