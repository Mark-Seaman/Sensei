# export hammer='seaman@172.16.0.2'

# # Path variable
# export PATH=$p:\
# $p/bin:\
# /bin:\
# /sbin:\
# /usr/bin:\
# /usr/local/bin:\
# /opt/local/bin

# . $p/bin/bash-alias

# cd $p

{
    echo `date` `id` " - $0 Started"

    . $p/bin/bashrc
    . $p/bin/venv

    python bin/x.py hourly run

    echo `date` " - $0 All done"
} 2>&1 > $p/log/cron-hourly.log

