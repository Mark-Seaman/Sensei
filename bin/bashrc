#!/bin/bash
# Setup project context

if [ `hostname` == 'MyBook' ]
then
    export p=$HOME/MyBook
else
    export p=$HOME/Projects/MyBook
fi
echo "p = $p"
# ls $p

export PIPENV_IGNORE_VIRTUALENVS=1
export PROJECT_BASE="$HOME/Projects/Hammer"
export SERVER_DIR=/home/django/MyBook
export imac='seaman@10.0.0.48'
export macbook='markseaman@10.0.0.167'
export hammer='seaman@172.16.0.2'
export blue='uncobacs@unco-bacs.org'
export book="$HOME/Projects/Leverage"
export mbw="$HOME/Archive/rcp/mbw"
export CLICOLOR=true
export u2="$HOME/Projects/UNC/BACS200/Notes"
export u3="$HOME/Projects/UNC/BACS350/Notes"
export s="$HOME/Sensei"

cat $p/bin/welcome

# Path variable
export PATH=$p:\
$p/bin:\
/bin:\
/sbin:\
/usr/local/sbin:\
/usr/local/bin:\
/opt/local/bin:\
/usr/bin:\
/usr/local/mysql/bin

echo Setup Virtual Environment for Python
echo '. bin/venv'

. $p/bin/bash-alias
. $p/bin/bash-prompt

cd $p

