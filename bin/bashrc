#!/bin/bash
# Setup project context

if [ `hostname` == 'MyBook' ]
then
    export p=$HOME/MyBook
else
    # TODO:  replace with $HOME/Sensei
    export p=$HOME/Projects/MyBook
fi
echo "p = $p"
# ls $p

export PROJECT_BASE="$HOME/Projects/Hammer"
export SERVER_DIR="/home/django/MyBook"
export imac='seaman@10.0.0.48'
export macbook='markseaman@10.0.0.167'
export hammer='seaman@172.16.0.2'
export blue='uncobacs@unco-bacs.org'
export book="$HOME/Projects/Leverage"
export mbw="$HOME/Archive/rcp/mbw"
export CLICOLOR=true
export s="$HOME/Sensei"

cat $p/bin/welcome

# Path variable
export PATH=$p:\
$p/bin:\
/bin:\
/sbin:\
/usr/local/sbin:\
/usr/local/bin:\
/opt/local/bin:\
/usr/bin:\
/usr/local/mysql/bin


# Replace with pipenv

# echo 'PATH = ' $PATH
# export _OLD_VIRTUAL_PATH=$PATH


# [ -f ~/Tools/env-python27/bin/activate ] &&
# . ~/Tools/env-python27/bin/activate
echo "Active python = `which python`"
echo


. $p/bin/bash-alias
. $p/bin/bash-prompt

cd $p

