upstream app_server {
    server unix:/home/django/gunicorn.socket fail_timeout=0;
}


server {
    listen 80;
    server_name who2hire.biz www.who2hire.biz;
    return 301 https://$host$request_uri;    
}


server {
    listen 443 ssl;

    server_name who2hire.biz www.who2hire.biz;

    ssl_certificate /etc/letsencrypt/live/who2hire.biz/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/who2hire.biz/privkey.pem;

    root /var/www/html;
    index index.html index.htm;

    client_max_body_size 4G;
    server_name _;

    keepalive_timeout 5;

    # Your Django project's media files - amend as required
    location /media  {
        alias /home/django/MyBook/media;
    }

    # your Django project's static files - amend as required
    location /static {
        alias /home/django/MyBook/static; 
    }

    # Proxy the static assests for the Django Admin panel
    location /static/admin {
       alias /usr/lib/python2.7/dist-packages/django/contrib/admin/static/admin/;
    }

    location ~ /.well-known {
       allow all;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
        proxy_pass http://app_server;
    }
}
