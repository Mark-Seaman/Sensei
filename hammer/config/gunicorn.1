[Unit]
Description=Gunicorn daemon for Who2Hire django application
Before=nginx.service
After=network.target

[Service]
WorkingDirectory=/home/django/MyBook
ExecStart=/usr/bin/gunicorn --name=hammer --pythonpath=/home/django/MyBook --bind unix:/home/django/gunicorn.socket --config /etc/gunicorn.d/gunicorn.py hammer.wsgi:application
Restart=always
SyslogIdentifier=gunicorn
User=django
Group=django


[Install]
WantedBy=multi-user.target
